@import ('main.styl')

@media (max-width: 1728px) 
    .container
        padding-right 64px
        padding-left 64px

    .hero
        &__bg
            right 0
            background-size 44% auto


@media (max-width: 1440px) 
    .header
        &__phone
            font-size 16px
            margin-right 80px
    .nav
        &__list
            margin-right 35px
        &__item
            &:not(:last-child)
                margin-right 35px
        &__link
            font-size 16px
    .hero
        &__title
            text(135,143)
        &__bg
            bottom -112px
            background-size 57% auto
    .order
        &__title
            width 69%
    

@media (max-width: 1280px) 
    .container
        padding-right 50px
        padding-left 50px

    .header
        &__container
            justify-content space-between
        &__logo
            margin 0
        &__phone
            display none
    .burger
        display block
    .menu
        position absolute
        z-index 1000
        top 0
        left 0
        background-color $black
        width 300px
        min-height 100vh
        padding 40px
        visibility hidden
        transform translateX(-120%)
        transition visibility 0.3s ease-in-out, transform 0.3s ease-in-out
        &__close-btn
            display block
            margin-bottom 40px
        &--active
            visibility visible
            transform translateX(0)
    .nav
        &__list
            flex-direction column
        &__item
            &:not(:last-child)
                margin-right 0
                margin-bottom 20px
        &__link
            text(18,22)
    .hero
        &__container
            padding-top 90px
        &__bg
            bottom -76px
            background-size 52% auto
        &__title
            text(100,104)
            margin-bottom 20px
        &__descr
            text(21,24)
            margin-bottom 90px
        &__subtitle
            text(34,40)
    .order
        padding-top 90px
        &__title
            width 87%
            margin-bottom 60px
        &__content
            width 100%
        &__item
            min-width 20%
            padding-top 195px
            &.order__item-nootris
                background-size 350px auto
                padding-top 170px

@media (max-width: 956px) 
    .hero
        &__container
            padding-top 65px
        &__bg
            bottom -35px
        &__title
            text(70,77)
            margin-bottom 15px
        &__descr
            width 66%
            text(19,22)
            margin-bottom 75px
        &__subtitle
            text(32,38)
        &__advantage
            width 41%
            text(16,19)
    .order
        padding-top 70px
        &__title
            width 98%
            text(36,44)
        &__price-full
            text(32,39)
            margin-right 12px
            &::after
                left -8px
                min-width 93px
        &__price-discount
            text(44,36)
        &__item
            padding-top 145px
            background-size auto 100px
            &.order__item-ginger
                background-size auto 100px
            &.order__item-nootris
                background-size 300px auto
                padding-top 136px
        &__text-nootris
            text(25,31)
            margin-bottom 6px
        &__accent-nootris
            text(21,25)

@media(max-width: 700px)
    .order
        &__title
            text(31,39)
        &__price
            margin-bottom 40px
        &__list
            flex-direction column
        &__item
            width 100%
            background-size 200px auto
            padding-top 166px
            &:not(:last-child)
                margin-bottom 60px
            &.order__item-nootris
                order -1
                background-size 290px auto
                padding-top 120px
            &.order__item-ginger
                background-size 177px auto
                padding-top 145px

@media (max-width: 576px)
    .container
        padding-right 15px
        padding-left 15px
    .menu
        width 100%
        padding 30px 15px
    .hero
        &__container
            padding-top 50px
            padding-bottom 210px
        &__bg
            background-position bottom center
            background-size 290px auto
        &__content
            display flex
            flex-direction column
            align-items center
        &__title
            text(42,48)
            text-align center
        &__descr
            font-size 18px
            text-align center
            width 100%
        &__subtitle
            display none
        &__advantage
            display none
    .order
        &__btn
            width 100%